model Post {
  id         String    @id @default(uuid())
  title      String    @db.VarChar(225)
  content    String?     @db.Text
  thumbnail  String?
  isFeatured Boolean   @default(false)
  status     PostType  @default(APPROVED)
  tags       String[]
  views      Int       @default(0)
  authorId   String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  comments   Comment[]

  //INDEXING

  @@index([authorId])
  @@map("posts")
}

enum PostType {
  PENDING
  APPROVED
  REJECTED
}